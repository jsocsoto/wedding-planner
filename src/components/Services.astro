---
import type { translations } from '../i18n/translations';

interface Props {
  t: typeof translations.es | typeof translations.en;
}

const { t } = Astro.props;

const services = [
  {
    icon: '‚ú®',
    title: t.services.fullPlanning.title,
    description: t.services.fullPlanning.description
  },
  {
    icon: 'üìã',
    title: t.services.partialPlanning.title,
    description: t.services.partialPlanning.description
  },
  {
    icon: 'üéØ',
    title: t.services.dayOf.title,
    description: t.services.dayOf.description
  },
  {
    icon: 'üé®',
    title: t.services.design.title,
    description: t.services.design.description
  },
  {
    icon: 'ü§ù',
    title: t.services.vendors.title,
    description: t.services.vendors.description
  },
  {
    icon: '‚úàÔ∏è',
    title: t.services.destination.title,
    description: t.services.destination.description
  }
];
---

<section id="services" class="services">
  <div class="container">
    <h2 class="section-title">{t.services.title}</h2>
    <p class="section-subtitle">{t.services.subtitle}</p>
    
    <div class="services-grid">
      {services.map(service => (
        <div class="service-card">
          <div class="service-icon">{service.icon}</div>
          <h3 class="service-title">{service.title}</h3>
          <p class="service-description">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    padding: 6rem 2rem;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--primary);
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-secondary);
    font-size: 1.1rem;
    max-width: 700px;
    margin: 0 auto 4rem;
    line-height: 1.6;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-card {
    padding: 2.5rem;
    background: white;
    border-radius: 0;
    transition: all 0.4s ease;
    border: 1px solid var(--border-light);
    box-shadow: none;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    border-color: var(--primary);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }

  .service-title {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .service-description {
    color: var(--text-secondary);
    line-height: 1.7;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .services {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 2rem;
      margin-bottom: 0.75rem;
    }

    .section-subtitle {
      font-size: 1rem;
      padding: 0 1rem;
      margin-bottom: 2.5rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .service-card {
      padding: 2rem;
    }

    .service-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .service-title {
      font-size: 1.3rem;
    }
  }
</style>
