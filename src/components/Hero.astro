---
import type { translations } from '../i18n/translations';

interface Props {
  t: typeof translations.es | typeof translations.en;
}

const { t } = Astro.props;
---

<section id="home" class="hero">
  <div class="hero-content">
    <h1 class="hero-title">{t.hero.title}</h1>
    <p class="hero-subtitle">{t.hero.subtitle}</p>
    <p class="hero-description">{t.hero.description}</p>
    <div class="hero-buttons">
      <a href="#contact" class="btn btn-primary">{t.hero.cta}</a>
      <a href="#services" class="btn btn-secondary">{t.hero.ctaSecondary}</a>
    </div>
  </div>
  <div class="hero-decoration">
    <div class="decoration-circle"></div>
    <div class="decoration-circle"></div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #fff5f8 0%, #fffbfc 30%, #ffe8f0 100%);
    padding: 8rem 2rem 4rem;
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
    z-index: 2;
    animation: fadeInUp 1s ease;
  }

  .hero-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 5vw, 4.5rem);
    font-weight: 400;
    color: var(--primary);
    margin-bottom: 1rem;
    letter-spacing: 2px;
    font-style: italic;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: clamp(1.2rem, 3vw, 2.5rem);
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-weight: 300;
    font-style: italic;
    line-height: 1.4;
  }

  .hero-description {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: var(--text-secondary);
    margin-bottom: 2.5rem;
    line-height: 1.8;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
    font-size: 1rem;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
    box-shadow: 0 4px 20px rgba(166, 124, 82, 0.3);
  }

  .btn-primary:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(166, 124, 82, 0.4);
  }

  .btn-secondary {
    background: transparent;
    color: var(--primary);
    border: 2px solid var(--primary);
  }

  .btn-secondary:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
  }

  .hero-decoration {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .decoration-circle {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(212, 120, 155, 0.15), rgba(247, 213, 227, 0.1), transparent);
  }

  .decoration-circle:first-child {
    width: 500px;
    height: 500px;
    top: -100px;
    right: -100px;
    animation: float 20s ease-in-out infinite;
  }

  .decoration-circle:last-child {
    width: 400px;
    height: 400px;
    bottom: -100px;
    left: -100px;
    animation: float 25s ease-in-out infinite reverse;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(50px, 50px) scale(1.1);
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 5rem 1rem 3rem;
      min-height: 90vh;
    }

    .hero-title {
      letter-spacing: 1px;
      margin-bottom: 0.75rem;
    }

    .hero-subtitle {
      margin-bottom: 1rem;
    }

    .hero-description {
      margin-bottom: 2rem;
      padding: 0 1rem;
    }

    .hero-buttons {
      flex-direction: column;
      gap: 1rem;
      width: 100%;
    }

    .btn {
      width: 100%;
      max-width: 100%;
      padding: 0.9rem 2rem;
      font-size: 0.95rem;
    }
  }
</style>
