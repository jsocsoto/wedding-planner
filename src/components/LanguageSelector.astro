---
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en');
---

<div class="language-selector">
  <a href={isEnglish ? currentPath.replace('/en', '') : currentPath} class={!isEnglish ? 'active' : ''}>
    ES
  </a>
  <span class="separator">|</span>
  <a href={isEnglish ? currentPath : `/en${currentPath}`} class={isEnglish ? 'active' : ''}>
    EN
  </a>
</div>

<style>
  .language-selector {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    font-size: 0.9rem;
  }

  .language-selector a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .language-selector a:hover {
    color: var(--primary);
  }

  .language-selector a.active {
    color: var(--primary);
    font-weight: 600;
  }

  .separator {
    color: var(--text-muted);
  }
</style>
