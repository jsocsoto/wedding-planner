---
import LanguageSelector from './LanguageSelector.astro';
import type { translations } from '../i18n/translations';

interface Props {
  t: typeof translations.es | typeof translations.en;
}

const { t } = Astro.props;
---

<nav class="navbar">
  <div class="nav-container">
    <a href="#home" class="logo">Kimaura</a>
    
    <button class="mobile-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <div class="nav-menu">
      <a href="#home">{t.nav.home}</a>
      <a href="#services">{t.nav.services}</a>
      <a href="#about">{t.nav.about}</a>
      <a href="#gallery">{t.nav.gallery}</a>
      <a href="#budget">{t.nav.budget}</a>
      <a href="#checklist">{t.nav.checklist}</a>
      <a href="#testimonials">{t.nav.testimonials}</a>
      <a href="#contact">{t.nav.contact}</a>
      <LanguageSelector />
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 15px rgba(212, 120, 155, 0.15);
    z-index: 1000;
    padding: 1.2rem 0;
    border-bottom: 1px solid rgba(212, 120, 155, 0.1);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 400;
    color: var(--primary);
    text-decoration: none;
    letter-spacing: 2px;
    font-style: italic;
  }

  .nav-menu {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-menu a {
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-menu a:not(.logo)::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary);
    transition: width 0.3s ease;
  }

  .nav-menu a:hover::after {
    width: 100%;
  }

  .nav-menu a:hover {
    color: var(--primary);
  }

  .mobile-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .mobile-toggle span {
    width: 25px;
    height: 3px;
    background: var(--primary);
    transition: all 0.3s ease;
  }

  @media (max-width: 968px) {
    .mobile-toggle {
      display: flex;
    }

    .nav-menu {
      position: fixed;
      top: 70px;
      right: -100%;
      width: 300px;
      height: calc(100vh - 70px);
      background: white;
      flex-direction: column;
      align-items: flex-start;
      padding: 2rem;
      box-shadow: -2px 0 20px rgba(0, 0, 0, 0.1);
      transition: right 0.3s ease;
    }

    .nav-menu.active {
      right: 0;
    }
  }
</style>

<script>
  document.querySelector('.mobile-toggle')?.addEventListener('click', () => {
    document.querySelector('.nav-menu')?.classList.toggle('active');
  });

  // Smooth scroll
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e: Event) {
      e.preventDefault();
      const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
      const target = document.querySelector(href || '');
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        document.querySelector('.nav-menu')?.classList.remove('active');
      }
    });
  });
</script>
